generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id
  username  String
  firstName String
  lastName  String?
  avatarUrl String?
  scores    Score[]
}

model Score {
  id        String   @id @default(uuid())
  userId    String
  value     Int
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}
